{
  "manifest_version": 3,
  "name": "Fluxer Theme Inspector",
  "description": "Inspect and edit CSS custom properties on Fluxer instances",
  "version": "0.1.0",
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.fluxer.app/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["bridge.js"],
      "matches": ["*://*.fluxer.app/*"]
    }
  ]
}
